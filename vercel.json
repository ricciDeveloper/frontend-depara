{
  "version": 2,
  "name": "dexpara-frontend",
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "ignoreFiles": ["services/*.js", "script.js", "*.css"],
  "headers": [
    {
      "source": "/(.*).(js|css)",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" }
      ]
    }
  ],
  "env": {
    "API_BASE_URL": "https://backend-depara.onrender.com"
  }
}
